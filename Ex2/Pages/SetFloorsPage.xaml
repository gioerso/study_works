<Page x:Class="Ex2.Pages.SetFloorsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ex2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SetFloorsPage">
    <Page.Resources>
        <Style TargetType="Button" x:Name="ButtonStyle">
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button x:Name="IncFloor" Content="+" Click="IncFloor_Click"/>
            <TextBlock Name="Floors" Height="40" FontSize="22" TextAlignment="Center" Text="1"/>
            <Button x:Name="DecFloor" Content="-" Click="DecFloor_Click"/>
            <Button x:Name="Confirm" Content="OK" Click="Confirm_Click"/>
        </StackPanel>
    </Grid>
</Page>
