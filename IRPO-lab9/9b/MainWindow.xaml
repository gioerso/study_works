<Window x:Class="_9b.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_9b"
        mc:Ignorable="d"
        Title="MainWindow" Height="263" Width="577">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="ButtonStart" Grid.Column="0" Grid.Row="0" Margin="30" Click="ButtonStart_Click">start</Button>
        <Button x:Name="ButtonStop" Grid.Column="0" Grid.Row="1" Margin="30" Click="ButtonStop_Click">stop</Button>
        <Label x:Name="progressLabel" FontSize="60" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <ProgressBar x:Name="ProgressBarMain" Grid.Column="0" Grid.Row="2" Maximum="1000"  Margin="30" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
